{
    "extends": [
        "config:best-practices",
        "schedule:automergeDaily",
        "schedule:daily"
    ],
    "packageRules": [
        {
            "matchDepNames": [
                "nixpkgs"
            ],
            "postUpgradeTasks": {
                "commands": [
                    "updater",
                    "treefmt"
                ],
                "fileFilters": [
                    "packages/**/*"
                ]
            }
        }
    ],
    "automerge": true,
    "nix": {
        "enabled": true
    },
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "extends": [
            "schedule:daily"
        ]
    }
}