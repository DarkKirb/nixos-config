{
    "extends": [
        "config:best-practices",
        "schedule:automergeDaily",
        "schedule:daily"
    ],
    "postUpgradeTasks": {
        "commands": [
            "updater",
            "treefmt"
        ],
        "fileFilters": [
            "packages/**/*"
        ]
    },
    "automerge": true,
    "nix": {
        "enabled": true
    },
    "lockFileMaintenance": {
        "enabled": true,
        "extends": [
            "schedule:daily"
        ]
    },
}